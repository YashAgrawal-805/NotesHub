<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remove User</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000; /* Black background */
            color: #fff; /* White text */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        header {
            background-color: #202020;
            padding: 10px 20px;
            border-bottom: 1px solid #333;
            width: 100%;
            box-sizing: border-box;
        }

        .main-content {
            margin-top: 5%;
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            box-sizing: border-box;
        }

        .container {
            background: #1c1c1c; /* Dark background */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
            padding: 20px;
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #fff;
            font-size: 24px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            max-width: 600px;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #555;
        }

        th {
            background-color: #333;
        }

        td {
            background-color: #1c1c1c;
        }

        .remove-btn {
            padding: 10px 15px;
            background-color: #ff9800; /* Orange background */
            color: #000; /* Black text */
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .remove-btn:hover {
            background-color: #e68900;
        }
        footer{
            margin-top: 10%;
        }
    </style>
</head>
<body>
    <header>
        <%- include('./partials/header1.ejs') %>
    </header>
    <div class="main-content">
        <div class="container">
            <h1>Remove User</h1>

            <!-- Display a list of users -->
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Roll Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.rollno %></td>
                            <td>
                                <!-- Form to remove a user by roll number -->
                                <form action="/admin/removeuser" method="POST">
                                    <input type="hidden" name="rollno" value="<%= user.rollno %>">
                                    <button class="remove-btn" type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <footer>
        <%- include('./partials/footer.ejs') %>
    </footer>
</body>
</html>
